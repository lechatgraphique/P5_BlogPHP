<header class="bg-primary py-5 mb-5">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-12">
                <h1 class="display-4 text-white mt-5 mb-2">{{ post.title }}</h1>
                <p class="lead mb-5 text-white-50">
                    {{ post.description }}
                </p>
                <hr>
                <small class="text-white-50">
                    Publi√© par <b>{{ post.author.firstName }} {{ post.author.lastName }}</b> <br>
                    <i class="far fa-calendar-alt"></i> {{ post.createdAt | dateFR }} |
                    <i class="far fa-comments"></i> {{ post.comments | count }} {%  if post.comments | count <= 1 %} commentaire {% else %} commentaires {% endif %}
                </small>
                <div class="mt-3">
                    <span class="badge badge-light">
                        <i class="fas fa-tags text-primary"></i> <a class=" btn-link" href="#" role="button">{{ post.category.title }}</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>