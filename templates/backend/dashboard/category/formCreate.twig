{% extends 'backend/layouts/default.twig' %}

{% block title %}
    <title>Blog PHP : Ajouter une catégorie</title>
{% endblock %}

{% block content %}
    <div class="container my-5 pt-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Administration</a></li>
                <li class="breadcrumb-item"><a href="/dashboard/categories">Catégories</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nouvelle catégorie</li>
            </ol>
        </nav>
        {% include 'backend/layouts/alert.twig' %}
        <form action="/dashboard/categories/create/" method="post"  enctype="multipart/form-data">
            <input type="hidden" class="form-control" id="id" name='id'>
            <div class="card-body">
                <section class=" mt-5">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label for="title">TITRE</label>
                                <input type="text" class="form-control" id="title" name='title' value="" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="title" name='slug' value="" required>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="row">
                <div class="col-md-12 d-flex justify-content-end">
                    <input class="btn btn-primary ml-2" type="submit" value="Enregistrer">
                </div>
            </div>
        </form>
    </div>
{% endblock %}