{% extends 'backend/layouts/default.twig' %}

{% block title %}
    <title>Blog PHP : Liste des commentaires</title>
{% endblock %}

{% block content %}

    <div class="container-fluid mt-5 pt-5">
        <div class="row">
            <div class="col-md-12 col-lg-3">
                {% include 'backend/layouts/adminNavbar.twig' %}
            </div>
            <div class="col-md-12 col-lg-9">
                {% include 'backend/layouts/alert.twig' %}
                <div class="card">
                    <div class="card-header">
                        Liste des commentaires en attente de validation
                    </div>
                    <div class="card-body">
                       {% for post in posts %}
                           {% for comment in post.comments %}
                               {% if comment.isValidated == 0 %}
                                   <h5 class="card-title">{{ post.title }}</h5>
                                   <p class="card-text">{{ comment.content }}</p>

                                   <div class="d-flex justify-content-between">
                                       <div>
                                           <small class="mr-1">{{ comment.author.firstName }} {{ comment.author.lastName }},</small>
                                           <small>{{ comment.createdAt | dateFR }}</small>
                                       </div>
                                       <div>
                                           <a href="/dashboard/commentaires/{{ comment.id }}/update" class="card-link text-success"><i class="fas fa-check"></i></a>
                                           <a href="/dashboard/commentaires/{{ comment.id }}/delete" class="card-link text-danger"><i class="far fa-trash-alt"></i> Supprimer</a>
                                       </div>
                                   </div>
                                   <hr>
                               {% endif %}
                            {% endfor %}
                        {% endfor %}
                        {{ pagination | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}